{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}